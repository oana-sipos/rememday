source 'https://rubygems.org' do
  gem 'rails'
  gem 'pg'

  gem 'jquery-rails'
  gem 'devise'
  gem 'sass-rails', '~> 4.0.0'
  gem 'uglifier', '>= 1.3.0'
  gem 'coffee-rails', '~> 4.0.0'
  gem 'bootstrap-sass'
  gem 'quiet_assets'
  gem 'turbolinks'
  gem 'jbuilder', '~> 1.0.1'
  gem 'simple_form'
  gem 'will_paginate'
  gem 'will_paginate-bootstrap'
  gem "font-awesome-rails"
  gem 'react-rails', '~> 1.5.0'

  group :production do
    gem 'rails_12factor'
  end

  group :development, :test do
    gem 'rspec-rails'
    gem 'better_errors'
  end

  group :test do
    gem 'capybara'
    gem 'selenium-webdriver'
    gem 'database_cleaner'
  end
end
