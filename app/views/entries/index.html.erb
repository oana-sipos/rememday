<div class="col-sm-8 col-sm-offset-2">
  <h1>Rememdays</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Memory</th>
        <th>Mood</th>
        <th>Weight</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @entries.each do |entry| %>
        <tr>
          <td><%= entry.name %></td>
          <td><%= entry.date %></td>
          <td><%= entry.memory %></td>
          <td><%= entry.mood %></td>
          <td><%= entry.weight %></td>
          <td><%= link_to '<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'.html_safe, entry %></td>
          <td><%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_entry_path(entry) %></td>
          <td><%= link_to '<span class="glyphicon glyphicon-fire" aria-hidden="true"></span>'.html_safe, entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Entry', new_entry_path, class: "btn btn-info btn-sm" %>
  <%= will_paginate @entries, class: 'pull-right' %>
</div>
