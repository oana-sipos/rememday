<div class="col-sm-8 col-sm-offset-2">
  <h1>Rememdays</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Memory</th>
        <th>Mood</th>
        <th>Weight</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @entries.each do |entry| %>
        <tr>
          <td><%= entry.name %></td>
          <td><%= entry.date %></td>
          <td><%= entry.memory %></td>
          <td><%= entry.mood %></td>
          <td><%= entry.weight %></td>
          <td><%= link_to 'Show', entry %></td>
          <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
          <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Entry', new_entry_path %>
</div>
